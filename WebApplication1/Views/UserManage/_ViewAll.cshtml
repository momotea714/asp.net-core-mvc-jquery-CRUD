@model IEnumerable<ApplicationUser>

@{ 
    Layout = null;
}

<table class="table table-bordered" id="applicationUserTable">
    <thead>
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var applicationUser in Model)
            {
                <tr>
                    <td>
                        @applicationUser.UserName
                    </td>
                    <td>
                        @applicationUser.DisplayUserName
                    </td>
                    <td>
                        @applicationUser.Email
                    </td>
                    <td text-right">
                        <a onclick="jQueryModalGet('?handler=OnGetCreateOrEditAsync&id=@applicationUser.Id','Edit Customer')" class="btn btn-info text-white"> Edit</a>
                        <form method="post" asp-action="OnPostDeleteAsync" asp-route-id="@applicationUser.Id" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#applicationUserTable").DataTable();
    });
</script>